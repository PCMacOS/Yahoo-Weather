<Page
    x:Class="Yahoo_Weather.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Yahoo_Weather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF8A2BE2">

        <WebView x:Name="WebView1"  HorizontalAlignment="Stretch" Visibility="Collapsed" NavigationCompleted="ShowWebView"/>
        <TextBlock x:Name="LoadingText" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Loading..." VerticalAlignment="Center" Foreground="White" FontFamily="Roboto" FontSize="36"/>


    </Grid>
</Page>
